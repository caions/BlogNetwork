<div class="d-flex justify-content-center mt-5">
    <div class="card" style="width: 50rem" ;>
        <div class="card-body">
            <h2 class="card-title">Editar Post</h2>
            <form action="/admin/edit" method="POST">
                <input type="hidden" name="id" value="{{post.id}}">
                <label for="Titulo">Titulo</label>
                <input type="text" name="titulo" class="form-control" maxlength="57" value="{{post.titulo}}">
                <br>
                <label for="Descricao">Descricao:</label>
                <textarea class="form-control" rows="3" name="descricao" maxlength="180" style="resize: none;" >{{post.descricao}}</textarea>
                <br>
                <label for="Texto">Texto</label>
                <textarea class="form-control" rows="10" name="texto" id="article">{{post.texto}}</textarea>
                <br>
                <label for="Texto">Fk_imagem</label>
                <input type="number" name="fk_imagem" class="form-control" value="{{post.fk_imagem}}">
                <br>
                <input type="submit" value="Editar" class="btn btn-success">
                <a class="btn btn-warning" href="/">Cancelar</div></a>
            </form>
        </div>
    </div>
</div>

<script src="/tinymce/tinymce.min.js"></script>
<script>

tinymce.init({
        language: 'pt_BR',
        selector: '#article',
        plugins: [
            'advlist autolin link image lists print preview hr searchreplace worcount fullscreen insertdatetime media save table paste emoticons'
        ]
      });
</script>

</script>